{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@now/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "index.js",
            "/infrastructure/*": {
                "methods": ["GET", "OPTIONS", "POST", "PUT", "DELETE"],
                "headers": "Origin, X-Requested-With, Content-Type, Accept"
            }
        }
    ]
}